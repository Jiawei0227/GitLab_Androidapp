<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="80dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/index_info_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        app:srcCompat="@mipmap/ic_gitlab_logo" />

    <TextView
        android:id="@+id/index_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/index_info_image"
        android:layout_toEndOf="@+id/index_info_image" />

    <TextView
        android:id="@+id/index_info_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_below="@+id/index_info_title"
        android:layout_alignLeft="@+id/index_info_title"
        android:layout_alignStart="@+id/index_info_title" />
</RelativeLayout>